   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <Label prefHeight="30.0" prefWidth="100.0" text="Úrok (%):" />
       <Label prefHeight="30.0" prefWidth="100.0" text="Dĺžka (roky):" GridPane.rowIndex="1" />
       <Label prefHeight="30.0" prefWidth="100.0" text="Suma:" GridPane.rowIndex="2" />
       <Label prefHeight="30.0" prefWidth="100.0" text="Mesačne:" GridPane.rowIndex="3" />
       <Label prefHeight="30.0" prefWidth="100.0" text="Spolu:" GridPane.rowIndex="4" />
      <TextField fx:id="tfUrokovaMiera" prefHeight="30.0" prefWidth="100.0" GridPane.columnIndex="1" />
      <TextField fx:id="tfPocetRokov" prefHeight="30.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="tfSuma" prefHeight="30.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="tfMesacneSplatky" prefHeight="30.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="tfSpolu" prefHeight="30.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="btVypocet" mnemonicParsing="false" onAction="#klikolSiNaVypocitaj" prefHeight="30.0" prefWidth="100.0" text="Vypočítaj" GridPane.columnIndex="1" GridPane.rowIndex="5" />
